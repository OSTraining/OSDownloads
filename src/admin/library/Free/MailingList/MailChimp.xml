<config>
    <fields name="mailinglist">
        <fields name="mailchimp">
            <field name="connect_mailchimp"
                   type="radio"
                   class="btn-group btn-group-yesno"
                   default="0"
                   label="COM_OSDOWNLOADS_CONNECT_TO_MAILCHIMP">
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>

            <field name="mailchimp_api"
                   type="text"
                   label="COM_OSDOWNLOADS_MAILCHIMP_API"
                   showon="connect_mailchimp:1"/>

            <field name="list_id"
                   type="text"
                   label="COM_OSDOWNLOADS_LIST_ID"
                   showon="connect_mailchimp:1"/>
        </fields>
    </fields>
</config>
